<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rishiqing.dingtalk.mgr.dingpush.dao.mapper.OpenSyncBizDataDao">

    <resultMap type="com.rishiqing.dingtalk.api.model.domain.dingpush.OpenSyncBizDataDO" id="openSyncBizDataMap">
        <id property="id" column="id"/>
        <result property="gmtCreate" column="gmt_create"/>
        <result property="gmtModified" column="gmt_modified"/>
        <result property="subscribeId" column="subscribe_id"/>
        <result property="corpId" column="corp_id"/>
        <result property="bizId" column="biz_id"/>
        <result property="bizType" column="biz_type"/>
        <result property="bizData" column="biz_data"/>
        <result property="openCursor" column="open_cursor"/>
        <result property="status" column="status"/>
    </resultMap>

    <sql id="select-all-fields">
        id,
        gmt_create,
        gmt_modified,
        subscribe_id,
        corp_id,
        biz_id,
        biz_type,
        biz_data,
        open_cursor,
        `status`
    </sql>
    <insert id="saveOrUpdateOpenSyncBizDataMedium" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO open_sync_biz_data_medium (gmt_create,
                                               gmt_modified,
                                               subscribe_id,
                                               corp_id,
                                               biz_id,
                                               biz_type,
                                               biz_data,
                                               open_cursor,
                                               `status`)
        VALUES (now(),
                now(),
                #{subscribeId},
                #{corpId},
                #{bizId},
                #{bizType},
                #{bizData},
                #{openCursor},
                #{status})
        ON DUPLICATE KEY UPDATE gmt_modified=now(),
                                biz_data=#{bizData},
                                open_cursor=#{openCursor},
                                `status`=#{status}
    </insert>

    <update id="updateStatus">
        update open_sync_biz_data
        set `status`=#{status},
            gmt_modified=now()
        where subscribe_id = #{subscribeId}
          and corp_id = #{corpId}
          and biz_id = #{bizId}
          and biz_type = #{bizType}
    </update>

    <update id="updateMediumStatus">
        update open_sync_biz_data_medium
        set `status`=#{status},
            gmt_modified=now()
        where subscribe_id = #{subscribeId}
          and corp_id = #{corpId}
          and biz_id = #{bizId}
          and biz_type = #{bizType}
    </update>

    <select id="getOpenSyncBizDataById" resultMap="openSyncBizDataMap">
        SELECT
        <include refid="select-all-fields"/>
        FROM open_sync_biz_data
        <![CDATA[
			WHERE id=#{id}
		 ]]>
    </select>

    <select id="getOpenSyncBizDataListByStatus" resultMap="openSyncBizDataMap">
        SELECT
        <include refid="select-all-fields"/>
        FROM open_sync_biz_data
        <![CDATA[
			WHERE `status`=#{status}
		 ]]>
        ORDER BY id
    </select>

    <select id="getOpenSyncBizDataMediumListByStatus" resultMap="openSyncBizDataMap">
        SELECT
        <include refid="select-all-fields"/>
        FROM open_sync_biz_data_medium
        <![CDATA[
			WHERE `status`=#{status}
		 ]]>
        ORDER BY id
    </select>
</mapper>