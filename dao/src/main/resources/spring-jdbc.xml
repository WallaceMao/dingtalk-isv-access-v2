<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-autowire="byName">

    <!--钉钉授权主库-->
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="${jdbc.url}"/>
        <property name="username" value="${jdbc.username}" />
        <property name="password" value="${jdbc.password}" />
    </bean>

    <!--钉钉提醒库-->
    <bean id="dataSourceRemind" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver" />
        <property name="url" value="${jdbc.remind.url}" />
        <property name="username" value="${jdbc.remind.username}" />
        <property name="password" value="${jdbc.remind.password}" />
    </bean>

    <!--钉钉云推送主库-->
    <bean id="dataSourceDingPush" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="com.mysql.jdbc.Driver" />
        <property name="url" value="${jdbc.dingpush.url}" />
        <property name="username" value="${jdbc.dingpush.username}" />
        <property name="password" value="${jdbc.dingpush.password}" />
    </bean>
</beans>