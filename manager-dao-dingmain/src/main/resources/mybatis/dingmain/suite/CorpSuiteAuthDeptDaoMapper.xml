<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rishiqing.dingtalk.mgr.dingmain.dao.mapper.suite.CorpSuiteAuthDeptDao">

    <resultMap type="com.rishiqing.dingtalk.api.model.domain.suite.CorpSuiteAuthDeptDO" id="corpSuiteAuthDeptMap">
        <id property="id" column="id"/>
        <result property="gmtCreate" column="gmt_create"/>
        <result property="gmtModified" column="gmt_modified"/>
        <result property="suiteKey" column="suite_key"/>
        <result property="corpId" column="corp_id"/>
        <result property="deptId" column="dept_id"/>
    </resultMap>

    <sql id="select-all-fields">
        id,
        gmt_create,
        gmt_modified,
        suite_key,
        corp_id,
        dept_id
    </sql>

    <insert id="saveBatchCorpSuiteAuthDept" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO isv_corp_suite_auth_dept(gmt_create,
                                             gmt_modified,
                                             suite_key,
                                             corp_id,
                                             dept_id)
        VALUES
        <foreach collection="list" item="element" open="(" separator="),(" close=")">
            now(),
            now(),
            #{element.suiteKey},
            #{element.corpId},
            #{element.deptId}
        </foreach>
    </insert>

    <delete id="deleteCorpSuiteAuthDeptByCorpId">
        DELETE
        FROM isv_corp_suite_auth_dept
        <![CDATA[
        WHERE corp_id = #{corpId}
        ]]>
    </delete>

    <select id="getCorpSuiteAuthDeptByCorpIdAndDeptId" resultMap="corpSuiteAuthDeptMap">
        SELECT
        <include refid="select-all-fields"/>
        FROM isv_corp_suite_auth_dept
        <![CDATA[
			WHERE corp_id=#{corpId} AND dept_id=#{deptId}
		 ]]>
    </select>


    <select id="listGetCorpSuiteAuthDeptByCorpId" resultMap="corpSuiteAuthDeptMap">
        SELECT
        <include refid="select-all-fields"/>
        FROM isv_corp_suite_auth_dept
        <![CDATA[
			WHERE corp_id=#{corpId}
		 ]]>
    </select>
</mapper>