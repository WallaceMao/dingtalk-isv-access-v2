<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rishiqing.dingtalk.mgr.dingmain.dao.mapper.suite.AuthGlobalLockDao">

    <resultMap type="com.rishiqing.dingtalk.api.model.domain.suite.AuthGlobalLockDO" id="authGlobalLockMap">
        <id property="id" column="id" />
        <result property="lockKey" column="lock_key" />
        <result property="status" column="status" />
    </resultMap>

    <sql id="select-all-fields">
            id,
            lock_key,
            `status`
    </sql>

    <insert id="saveOrUpdateAuthGlobalLock" useGeneratedKeys="true" keyProperty="id">
        insert into isv_auth_global_lock (
        lock_key,
        `status`
        )values(
        #{lockKey},
        #{status}
        )ON DUPLICATE KEY UPDATE `status`=#{status}
    </insert>

    <update id="updateStatus">
        update isv_auth_global_lock
        set `status`=#{status}
        where lock_key=#{lockKey}
    </update>

    <select id="getAuthGlobalLockByLockKey" resultMap="authGlobalLockMap">
        SELECT <include refid="select-all-fields"/>  FROM isv_auth_global_lock
        <![CDATA[
			WHERE lock_key=#{lockKey}
		 ]]>
        FOR UPDATE
    </select>
</mapper>