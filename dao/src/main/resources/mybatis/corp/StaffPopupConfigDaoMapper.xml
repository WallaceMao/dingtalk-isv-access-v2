<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rishiqing.dingtalk.dao.mapper.corp.StaffPopupConfigDao">

    <resultMap type="com.rishiqing.dingtalk.dao.model.corp.StaffPopupConfigDO" id="staffPopupConfigMap">
        <id property="id" column="id" />
        <result property="gmtCreate" column="gmt_create" />
        <result property="gmtModified" column="gmt_modified" />
        <result property="suiteKey" column="suite_key" />
        <result property="popupType" column="popup_type" />
        <result property="saleQrCodeUrl" column="sale_qr_code_url" />
        <result property="salePhoneNumber" column="sale_phone_number" />
        <result property="isDisabled" column="is_disabled" />
    </resultMap>

    <sql id="select-all-fields">
        id,
        gmt_create,
        gmt_modified,
        suite_key,
        popup_type,
        sale_qr_code_url,
        sale_phone_number,
        is_disabled
    </sql>

    <insert id="saveOrUpdateStaffPopupConfig" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO isv_staff_popup_config (
        gmt_create,
        gmt_modified,
        suite_key,
        popup_type,
        sale_qr_code_url,
        sale_phone_number,
        is_disabled
        )VALUES(
        now(),
        now(),
        #{suiteKey},
        #{popupType},
        #{saleQrCodeUrl},
        #{salePhoneNumber},
        #{isDisabled}
        )ON DUPLICATE KEY UPDATE
        gmt_modified=now(),
        popup_type=#{popupType},
        sale_qr_code_url=#{saleQrCodeUrl},
        sale_phone_number=#{salePhoneNumber},
        is_disabled=#{isDisabled}
    </insert>

    <select id="getStaffPopupConfigListByIsDisabled" resultMap="staffPopupConfigMap">
        SELECT <include refid="select-all-fields"/>  FROM isv_staff_popup_config
        <![CDATA[
			WHERE is_disabled=#{isDisabled}
		 ]]>
    </select>

</mapper>