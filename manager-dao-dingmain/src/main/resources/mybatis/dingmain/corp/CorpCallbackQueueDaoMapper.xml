<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rishiqing.dingtalk.mgr.dingmain.dao.mapper.corp.CorpCallbackQueueDao">

    <resultMap type="com.rishiqing.dingtalk.api.model.domain.corp.CorpCallbackQueueDO" id="corpCallbackQueueMap">
        <id property="id" column="id"/>
        <result property="gmtCreate" column="gmt_create"/>
        <result property="gmtModified" column="gmt_modified"/>
        <result property="suiteKey" column="suite_key"/>
        <result property="corpId" column="corp_id"/>
        <result property="failInfo" column="fail_info"/>
        <result property="eventJSON" column="event_json"/>
        <result property="isSuccess" column="is_success"/>
        <result property="tag" column="tag"/>
        <result property="timestamp" column="timestamp"/>
        <result property="status" column="status"/>
    </resultMap>

    <sql id="select-all-fields">
        id,
        gmt_create,
        gmt_modified,
        suite_key,
        corp_id,
        fail_info,
        event_json,
        tag,
        is_success,
        `timestamp`,
        `status`
    </sql>

    <insert id="saveCorpCallbackQueueDO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO isv_corp_callback_queue (gmt_create,
                                             gmt_modified,
                                             suite_key,
                                             corp_id,
                                             fail_info,
                                             tag,
                                             event_json,
                                             `timestamp`,
                                             `status`)
        VALUES (now(),
                now(),
                #{suiteKey},
                #{corpId},
                #{failInfo},
                #{tag},
                #{eventJSON},
                #{timestamp},
                #{status})
        ON DUPLICATE KEY UPDATE gmt_modified=now(),
                                is_success=#{isSuccess},
                                `status`=#{status}
    </insert>
    <update id="updateCorpCallbackQueueDO">
        UPDATE isv_corp_callback_queue
        SET gmt_modified=now(),
            is_success=#{isSuccess},
            `status`=#{status}
        WHERE id = #{id}
    </update>

    <select id="getCorpCallbackQueueList" resultMap="corpCallbackQueueMap">
        SELECT
        <include refid="select-all-fields"/>
        FROM isv_corp_callback_queue
        LIMIT #{offset},#{limit}
    </select>
    <select id="listCorpCallbackQueueByStatusOrderByTimestampWithLimit" resultMap="corpCallbackQueueMap">
        SELECT
        <include refid="select-all-fields"/>
        FROM isv_corp_callback_queue
        USE index(index_corp_callback_status_timestamp)
        WHERE `status`=#{status}
        LIMIT #{limit}
    </select>


    <delete id="deleteById">
        DELETE
        FROM isv_corp_callback_queue
        WHERE id = #{id}
    </delete>

</mapper>